<style>
    /* Header Style with Animation */
    .animated-header {
        font-size: 3.5em;
        text-align: center;
        color: #2C3E50;
        animation: fadeInUp 1.5s ease-out;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
        letter-spacing: 1px;
    }

    /* Header animation */
    @keyframes fadeInUp {
        0% { opacity: 0; transform: translateY(30px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    /* Message Style */
    .message {
        text-align: center;
        color: #27ae60;
        font-size: 1.4em;
        font-weight: bold;
        animation: fadeInMessage 1s ease-in-out;
        margin-top: 10px;
    }

    @keyframes fadeInMessage {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    /* Thank You Message */
    .thank-you-message {
        text-align: center;
        padding: 25px;
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 12px;
        margin-top: 20px;
        animation: slideIn 1.5s ease-out;
    }

    .thank-you-img {
        width: 160px;
        margin-bottom: 15px;
        animation: bounceIn 1s ease;
    }

    /* Bounce In Animation */
    @keyframes bounceIn {
        0% { transform: translateY(-100px); opacity: 0; }
        50% { transform: translateY(10px); opacity: 1; }
        100% { transform: translateY(0); opacity: 1; }
    }

    /* Voting Form and Candidate Styles */
    .vote-form {
        animation: fadeInForm 1.5s ease-in-out;
    }

    @keyframes fadeInForm {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    .candidates {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 25px;
    }

    .candidate {
        width: 30%;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 12px;
        text-align: center;
        background-color: #f5f5f5;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 20px;
    }

    .candidate:hover {
        transform: translateY(-15px);
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    }

    .candidate-logo {
        width: 120px;
        height: 120px;
        object-fit: contain;
        margin-bottom: 15px;
    }

    .candidate h3 {
        color: #34495e;
        font-size: 1.3em;
    }

    /* Submit Button Style */
    .submit-btn {
        display: block;
        margin: 30px auto;
        padding: 12px 25px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2em;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .submit-btn:hover {
        transform: scale(1.1);
        background-color: #2980b9;
    }

    /* Voting Closed Message */
    .closed-message {
        text-align: center;
        padding: 25px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 12px;
        margin-top: 30px;
        animation: fadeInClosed 1.5s ease-out;
    }

    .closed-img {
        width: 160px;
        margin-bottom: 15px;
        animation: zoomIn 1s ease;
    }

    @keyframes zoomIn {
        0% { transform: scale(0); opacity: 0; }
        50% { transform: scale(1.2); opacity: 1; }
        100% { transform: scale(1); opacity: 1; }
    }

    /* Back to Home Button */
    .back-home {
        text-align: center;
        margin-top: 30px;
    }

    .back-btn {
        padding: 12px 25px;
        background-color: #2ecc71;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1.1em;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .back-btn:hover {
        background-color: #27ae60;
        transform: scale(1.05);
    }

</style>

<h1 class="animated-header">Voting Page</h1>

<% if (message) { %>
    <p class="message"><%= message %></p>
<% } %>

<% if (votingActive) { %>
    <% if (hasVoted) { %>
        <!-- Show Thank You Message -->
        <div class="thank-you-message">
            <img src="/images/vot2.png" alt="Thank You" class="thank-you-img">
            <h3>Thank You for Voting!</h3>
            <p>You have already cast your vote. Please wait for the results.</p>
        </div>
    <% } else { %>
        <!-- Voting Form -->
        <form action="/vote" method="POST" class="vote-form">
            <div class="candidates">
                <% candidates.forEach(candidate => { %>
                    <div class="candidate">
                        <h3><%= candidate.name %></h3>
                        <img src="<%= candidate.symbol %>" alt="<%= candidate.name %> Logo" class="candidate-logo">
                        <p><strong>Position:</strong> <%= candidate.position %></p>
                        <p><strong>Party:</strong> <%= candidate.party %></p>
                        <label>
                            <input type="radio" name="candidateId" value="<%= candidate._id %>" required />
                            <span>Vote for this candidate</span>
                        </label>
                    </div>
                <% }) %>
            </div>
            <button type="submit" class="submit-btn">Submit Vote</button>
        </form>
    <% } %>
<% } else { %>
    <!-- Voting Closed Message -->
    <div class="closed-message">
        <img src="/images/vote.jpeg" alt="Voting Closed" class="closed-img">
        <h3>Voting is Closed!</h3>
        <p>Weâ€™re sorry, but the voting session is currently unavailable. Please check back later.</p>
    </div>
<% } %>

<!-- Back to Index Button -->
<div class="back-home">
    <a href="/" class="back-btn">Back to Home</a>
</div>
